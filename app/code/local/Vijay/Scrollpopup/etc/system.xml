<?xml version="1.0"?>
<config>
    <tabs>
        <myconf_vijaystore translate="label" module="vijayscrollpopup">
            <label>VijayStore</label>
            <sort_order>300</sort_order>
        </myconf_vijaystore>
    </tabs>	
    <sections>
        <scrollpopup_tab translate="label" module="vijayscrollpopup">
            <label>Scroll Popup</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <scrollpopup_setting translate="label comment">
                    <label>Scroll Popup Setting</label>
                    <sort_order>503</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                      <scrollpopup_active translate="label comment">
                            <label>Scroll Popup Setting</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
							<comment>Remove Compare Products Enable/Disable</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scrollpopup_active>

						<scrollpopup_side translate="label comment">
                            <label>Scroll Popup Side</label>
							<frontend_type>select</frontend_type>
                            <source_model>vijayscrollpopup/dropdown_side</source_model> 
							<comment>Showing the scroll popup side</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scrollpopup_side>
						<!--
						<scrollpopup_content translate="label comment">
                            <label>Scroll Popup Content</label>
							<frontend_type>Textarea</frontend_type>
							<comment>Use html tags here</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scrollpopup_content>
						-->
						<scrollpopup_content translate="label comment">
							<label>Scroll Popup Content</label>
							<frontend_type>editor</frontend_type>
							<frontend_model>vijayscrollpopup/adminhtml_system_config_editor</frontend_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</scrollpopup_content>						
                     </fields>
                </scrollpopup_setting>		
            </groups>
        </scrollpopup_tab>
    </sections>
</config>